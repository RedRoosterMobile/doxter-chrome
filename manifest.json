{
  "name": "doxter Chrome",
  "version": "1.1.2",
  "manifest_version": 2,

  "description": "Chrome Extension that utilizes the doxter-synchronization API",

  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  
  "background": {
    "scripts": [
      "lib/jquery-1.9.1.min.js",
      "oauth2/oauth2.js",
      "lib/doxter.js",
      "lib/helper.js",
      "lib/settings.js",
      "doxter-chrome.js"]
  },

  "web_accessible_resources": [
    "img/success48.png",
    "img/error48.png",
    "img/info48.png"
  ],

  "options_page": "options/options.html",

  "content_scripts": [
    {
      "matches": ["http://www.google.com/robots.txt*"],
      "js": ["oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    }
  ]
}
