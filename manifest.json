{
  // Required
  "name": "doxter Chrome",
  "version": "0.0.1",
  "manifest_version": 2,

  "description": "Chrome Extension that utilizes the doxter-synchronization API",

  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  
  "background": {
    "scripts": [
      "jquery-1.9.1.min.js",
      "js/oauth2.js",
      "helper.js",
      "doxter-chrome.js"]
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["http://www.google.com/robots.txt*"],
      "js": ["js/injection.js"],
      "run_at": "document_start"
    }
  ]
}
